<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.gonnaup.accountmanagement.dao.ApplicationSequenceDao">

    <resultMap type="org.gonnaup.accountmanagement.entity.ApplicationSequence" id="ApplicationSequenceMap">
        <result property="applicationName" column="application_name" jdbcType="VARCHAR"/>
        <result property="sequenceType" column="sequence_type" jdbcType="VARCHAR"/>
        <result property="sequence" column="sequence" jdbcType="INTEGER"/>
        <result property="step" column="step" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ApplicationSequenceMap">
        select
          application_name, sequence_type, sequence, step
        from acountManagement.application_sequence
        where application_name = #{applicationName}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ApplicationSequenceMap">
        select
          application_name, sequence_type, sequence, step
        from acountManagement.application_sequence
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ApplicationSequenceMap">
        select
        application_name, sequence_type, sequence, step
        from acountManagement.application_sequence
        <where>
            <if test="applicationName != null and applicationName != ''">
                and application_name = #{applicationName}
            </if>
            <if test="sequenceType != null and sequenceType != ''">
                and sequence_type = #{sequenceType}
            </if>
            <if test="sequence != null">
                and sequence = #{sequence}
            </if>
            <if test="step != null">
                and step = #{step}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="applicationName" useGeneratedKeys="true">
        insert into acountManagement.application_sequence(sequence, step)
        values (#{sequence}, #{step})
    </insert>

    <insert id="insertBatch" keyProperty="applicationName" useGeneratedKeys="true">
        insert into acountManagement.application_sequence(sequence, step)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.sequence}, #{entity.step})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="applicationName" useGeneratedKeys="true">
        insert into acountManagement.application_sequence(sequence, step)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.sequence}, #{entity.step})
        </foreach>
        on duplicate key update
        sequence = values(sequence) , step = values(step)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update acountManagement.application_sequence
        <set>
            <if test="sequence != null">
                sequence = #{sequence},
            </if>
            <if test="step != null">
                step = #{step},
            </if>
        </set>
        where application_name = #{applicationName}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from acountManagement.application_sequence where application_name = #{applicationName}
    </delete>

</mapper>