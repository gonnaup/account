<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.gonnaup.accountmanagement.dao.RolePermissionDao">

    <resultMap type="org.gonnaup.accountmanagement.entity.RolePermission" id="RolePermissionMap">
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
        <result property="permissionId" column="permission_id" jdbcType="INTEGER"/>
        <result property="createtime" column="createtime" jdbcType="TIMESTAMP"/>
        <result property="updatetime" column="updatetime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="RolePermissionMap">
        select
          role_id, permission_id, createtime, updatetime
        from role_permission
        where role_id = #{roleId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="RolePermissionMap">
        select
          role_id, permission_id, createtime, updatetime
        from role_permission
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="RolePermissionMap">
        select
        role_id, permission_id, createtime, updatetime
        from role_permission
        <where>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
            <if test="permissionId != null">
                and permission_id = #{permissionId}
            </if>
            <if test="createtime != null">
                and createtime = #{createtime}
            </if>
            <if test="updatetime != null">
                and updatetime = #{updatetime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="roleId" useGeneratedKeys="true">
        insert into role_permission(createtime, updatetime)
        values (#{createtime}, #{updatetime})
    </insert>

    <insert id="insertBatch" keyProperty="roleId" useGeneratedKeys="true">
        insert into role_permission(createtime, updatetime)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.createtime}, #{entity.updatetime})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="roleId" useGeneratedKeys="true">
        insert into role_permission(createtime, updatetime)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.createtime}, #{entity.updatetime})
        </foreach>
        on duplicate key update
        createtime = values(createtime) , updatetime = values(updatetime)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update role_permission
        <set>
            <if test="createtime != null">
                createtime = #{createtime},
            </if>
            <if test="updatetime != null">
                updatetime = #{updatetime},
            </if>
        </set>
        where role_id = #{roleId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from role_permission where role_id = #{roleId}
    </delete>

</mapper>